@page
@model ParkNetApp.Pages.ParkingLotView.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Slot.Id" />
            <div class="form-group">
                
                <label asp-for="Slot.Code" class="control-label"></label>
                <input asp-for="Slot.Code" class="form-control" />
                <span asp-validation-for="Slot.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Slot.SlotType" class="control-label"></label>
                <input asp-for="Slot.SlotType" class="form-control" />
                <span asp-validation-for="Slot.SlotType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Slot.IsOccupied" /> @Html.DisplayNameFor(model => model.Slot.IsOccupied)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="Slot.FloorId" class="control-label"></label>
                <select asp-for="Slot.FloorId" class="form-control" asp-items="ViewBag.FloorId"></select>
                <span asp-validation-for="Slot.FloorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../ParkingLotView/Index" asp-route-id="@Model.Slot.Id" class="btn btn-success">Back to Park View</a>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
