@page
@model ParkNetApp.Pages.ParkingLotView.EditModel


@{
   
    ViewData["Title"] = "Edit";
}



<h1>Edit</h1>

<h4>Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Slot.Id" />

            <div class="form-group">
                
                <label asp-for="Slot.Code" class="control-label"></label>
                <input asp-for="Slot.Code" class="form-control" />
                <span asp-validation-for="Slot.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Slot.SlotType" class="control-label"></label>
                <input asp-for="Slot.SlotType" class="form-control" />
                <span asp-validation-for="Slot.SlotType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="hidden" asp-for="Slot.IsOccupied" />
@*                 
                    <label class="form-check-label">
                    <input class="form-check-input" asp-for="Slot.IsOccupied" /> @Html.DisplayNameFor(model => model.Slot.IsOccupied)
                </label> *@
            </div>
            <div class="form-group">
                
                <label asp-for="Slot.FloorId" class="control-label"></label>
                @* <select asp-for="Slot.FloorId" class="form-control" asp-items="ViewBag.Slot.FloorId"></select> *@
                @* <select asp-for="Slot.FloorId" class="form-control" asp-items="@(ViewData["FloorId"] as SelectList)"></select>; *@

                <select asp-for="Slot.FloorId" asp-items="@ViewData["FloorId"] as SelectList" class="form-control">
                    <option value="">-- Selecione um piso --</option>
                </select>

              
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
@*     <a asp-page="../ParkingLotView/Index" asp-route-id="@Model.Slot.Id" class="btn btn-success">Back to Park View</a> *@

    <a asp-page="/ParkingLotView/View" asp-route-id="@Model.Slot.Floor.ParkingLot.Id">
        Back to Parking Lot Layout
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
