@page "{id:int}"
@model ParkNetApp.Pages.AddVehicle.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <p>@ViewData.ModelState.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage</p>
    </div>
}



@if (Model.Vehicle != null)
{
    <div>
        <h4>Vehicle</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Vehicle Type
            </dt>
            <dd class="col-sm-10">
                @Model.Vehicle?.VehicleType?.Type
            </dd>
            <dt class="col-sm-2">
                Plate Number
            </dt>
            <dd class="col-sm-10">
                @Model.Vehicle?.PlateNumber
            </dd>
            <dt class="col-sm-2">
                Make
            </dt>
            <dd class="col-sm-10">
                @Model.Vehicle?.Make
            </dd>
            <dt class="col-sm-2">
                Model
            </dt>
            <dd class="col-sm-10">
                @Model.Vehicle?.Model
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Vehicle.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
else
{
    <p>Vehicle not found.</p>
}
