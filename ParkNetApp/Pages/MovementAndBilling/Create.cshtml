@page
@model ParkNetApp.Pages.MovementAndBilling.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
    <h4>Add new movement</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movement.TransactionDate" class="control-label"></label>
                <input asp-for="Movement.TransactionDate" class="form-control" />
                <span asp-validation-for="Movement.TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movement.Amount" class="control-label"></label>
                <input asp-for="Movement.Amount" class="form-control" type="number" />
                <span asp-validation-for="Movement.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movement.TransactionType"></label>
                <select asp-for="Movement.TransactionType" asp-items="Model.TransTypesOptions" class="form-control">
                    <option value="">-- Select the type of transaction --</option>
                </select>
                <span asp-validation-for="Movement.TransactionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movement.User.Email" class="control-label"></label>
                <select asp-for="Movement.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
