@model ParkNetApp.Pages.MovementAndBilling.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movement.Id" />
            <div class="form-group">
                
                <label asp-for="Movement.TransactionDate" class="control-label"></label>
                <input asp-for="Movement.TransactionDate" class="form-control" />
                <span asp-validation-for="Movement.TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Movement.Amount" class="control-label"></label>
                <input asp-for="Movement.Amount" class="form-control" />
                <span asp-validation-for="Movement.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Movement.TransactionType" class="control-label"></label>
                <input asp-for="Movement.TransactionType" class="form-control" />
                <span asp-validation-for="Movement.TransactionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Movement.UserId" class="control-label"></label>
                <select asp-for="Movement.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Movement.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

